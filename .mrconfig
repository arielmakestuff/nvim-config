[DEFAULT]
submodule = git submodule update --init --recursive
git_gc = git gc "$@"
recent =
	   git fetch
	   git log origin
log = git log --oneline --decorate --all --graph

[setup/vim-pathogen]
setup =
	   cd ../..
	   mkdir -p autoload
	   git submodule update --init --recursive -- setup/vim-pathogen
	   cp setup/vim-pathogen/autoload/pathogen.vim autoload

[bundle/vim-commentary]
setup =
	   cd ..
	   git submodule update --init --recursive -- vim-commentary

[bundle/LanguageClient-neovim]
setup =
	   cd ..
	   git submodule update --init --recursive -- LanguageClient-neovim
	   cd LanguageClient-neovim
	   ./install.sh

[bundle/nvim-completion-manager]
setup =
	   cd ..
	   git submodule update --init --recursive -- nvim-completion-manager

[bundle/neomake]
setup =
	   cd ..
	   git submodule update --init --recursive -- neomake

[bundle/ale]
setup =
	   cd ..
	   git submodule update --init --recursive -- ale
